<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/tableWeeklyMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,2,3,4,5,6,7"
        android:padding="8dp">

        <TableRow>
            <TextView android:text="Meal" android:textStyle="bold" android:padding="8dp"/>
            <TextView android:text="Mon" android:textStyle="bold" android:gravity="center" android:padding="8dp"/>
            <TextView android:text="Tue" android:textStyle="bold" android:gravity="center" android:padding="8dp"/>
            <TextView android:text="Wed" android:textStyle="bold" android:gravity="center" android:padding="8dp"/>
            <TextView android:text="Thu" android:textStyle="bold" android:gravity="center" android:padding="8dp"/>
            <TextView android:text="Fri" android:textStyle="bold" android:gravity="center" android:padding="8dp"/>
            <TextView android:text="Sat" android:textStyle="bold" android:gravity="center" android:padding="8dp"/>
            <TextView android:text="Sun" android:textStyle="bold" android:gravity="center" android:padding="8dp"/>
        </TableRow>

    </TableLayout>
</ScrollView>